@model BB2020MVC.Models.Races_Players_SkillTypes

@{
    ViewBag.Title = "Add Skill Type to " + ViewBag.Player;
}

<h2>AddSkillType</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Races_Players_SkillTypes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.PSkillTypeID)
            @Html.HiddenFor(model => model.PlayerID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.STypeID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.STypeID, new SelectList(ViewBag.SkillTypes, dataTextField: "Text", dataValueField: "Value"),new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.STypeID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Single, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.Single)
                    @Html.ValidationMessageFor(model => model.Single, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "SkillTypesIndex", new { ID = Model.PlayerID })
</div>
