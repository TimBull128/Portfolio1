@model BB2020MVC.Models.Races_Players

@{
    ViewBag.Title = "Edit " + ViewBag.RaceName + Model.Name;
}

<h2>BEditPlayer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Races_Players</h4>
