@model BB2020MVC.Models.Race

@{
    ViewBag.Title = "Add Race";
}

<h2>AddNew Race</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add New Race</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <table class="table table-bordered">
                    <tr>
                        <th>Race Name</th>
                        <th>Reroll Cost</th>
                        <th>Apothecary Available?</th>
                        <th>Special Rules</th>
                    </tr>
                    <tr>
                        @Html.HiddenFor(model => model.ID, Model.ID)
                        <td>
                            @Html.TextBoxFor(model => model.Name)<br/>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger"})
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.RerollCost)<br/>
                            @Html.ValidationMessageFor(model => model.RerollCost, "", new { @class = "text-danger" })
                        </td>
                        <td>@Html.CheckBoxFor(model => model.Apothecary)</td>
                        <td>
                            @Html.DropDownListFor(Model => Model.SRID1, new SelectList(ViewBag.SpecialRules, "ID", "Name"), "Select")<br />
                            @Html.ValidationMessageFor(Model => Model.SRID1)<br />
                            @Html.DropDownListFor(Model => Model.SRID2, new SelectList(ViewBag.SpecialRules, "ID", "Name"), "Select")<br />
                            @Html.ValidationMessageFor(Model => Model.SRID2);<br />
                            @Html.DropDownListFor(Model => Model.SRID3, new SelectList(ViewBag.SpecialRules, "ID", "Name"), "Select")<br />
                            @Html.ValidationMessageFor(Model => Model.SRID1);
                        </td>
                    </tr>
                </table>
                
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AllRaces")
</div>
