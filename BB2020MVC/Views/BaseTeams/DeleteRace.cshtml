@model BB2020MVC.Models.BaseRaceStruct
@{ ViewBag.Title = "Delete " + Model.Name;}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Race?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
    Please note: this will delete all Rosters of this Type!
