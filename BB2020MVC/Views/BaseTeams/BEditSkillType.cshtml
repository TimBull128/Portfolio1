@model BB2020MVC.Models.Races_Players_SkillTypes

@{
    ViewBag.Title = "Edit " + ViewBag.Player.Name + "'s" + @ViewBag.SkillTypeName + "Type";
}

<h2>EditSkillType</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit @ViewBag.Player.Name's @ViewBag.SkillTypeName Type</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.PSkillTypeID)
            @Html.HiddenFor(model => model.PlayerID)
            @Html.HiddenFor(model => model.STypeID)
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Single, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.Single)
                    @Html.ValidationMessageFor(model => model.Single, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "SkillTypesIndex", new { ID = Model.PlayerID})
</div>
