@model BB2020MVC.Models.AddFSkillVM

@{
    ViewBag.Title = "Add Forbidden Skill to " + Model.Skill.Name;
}

<h2>AddForbiddenSkill</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add Forbidden Skill to @Model.Skill.Name</h4>
        <hr />
        @Html.HiddenFor(model => model.FSkill.ForbiddenID)
        @Html.HiddenFor(model => model.FSkill.SkillID)
        @Html.DropDownListFor(model => model.FSkill.FSkillID, Model.List)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Forbidden Skill List", "ViewForbiddenSkills", new { SkillID = Model.Skill.SkillID })
</div>
